{
	"imports": {
		"@supabase/supabase-js": "jsr:@supabase/supabase-js@2",
		"@std/crypto": "jsr:@std/crypto@1.0.4",
		"@std/crypto/timing-safe-equal": "jsr:@std/crypto@1.0.4/timing-safe-equal",
		"@std/encoding/base64": "jsr:@std/encoding@1/base64",
		"@std/assert": "jsr:@std/assert@1",
		"@std/http": "jsr:@std/http@1",
		"hono": "jsr:@hono/hono@4",
		"hono/cors": "jsr:@hono/hono@4/cors",
		"hono/http-exception": "jsr:@hono/hono@4/http-exception",
		"zod": "https://deno.land/x/zod@v3.22.4/mod.ts"
	},
	"tasks": {
		"dev": "deno serve --watch -R main.ts",
		"test": "SUPABASE_URL=http://localhost:54321 SUPABASE_ANON_KEY=mock-anon-key SUPABASE_SERVICE_ROLE_KEY=mock-service-key deno test --allow-all tests/akademy.test.ts",
		"test:integration": "deno run --allow-all --env-file .env tests/integration.test.ts",
		"test:e2e": "deno run --allow-all --env-file .env tests/e2e.test.ts",
		"test:performance": "deno run --allow-all tests/performance.test.ts",
		"test:all": "deno task test && deno task test:integration && deno task test:e2e",
		"cache": "deno cache main.ts"
	}
}
